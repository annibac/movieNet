<Page x:Class="MovieNet.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieNet.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Home,Source={StaticResource VM_Locator}}"
      Title="Page1">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../images/IMG_1413.png" Stretch="UniformToFill" Opacity="0.5"/>
        </Grid.Background>
        <Button Command="{Binding SubscribeCommand}" Content="Inscrivez-vous" HorizontalAlignment="Left" Margin="505,261,0,0" VerticalAlignment="Top" Width="208" Height="48" Background="#FF1C1186" BorderBrush="#FF1C1186" Foreground="White" FontSize="16"/>
        <Button Command="{Binding LoginCommand}" Content="Connectez-vous" HorizontalAlignment="Left" Margin="76,264,0,0" VerticalAlignment="Top" Width="196" Height="47" Background="#FF8E0A0A" BorderBrush="#FF8E0A0A" Foreground="White" FontSize="16"/>
        <Label Content="Bienvenue dans cette bibliothèque de fiches de films !" HorizontalAlignment="Left" Margin="109,119,0,0" VerticalAlignment="Top" Height="44" Width="573" FontSize="24" RenderTransformOrigin="0.5,0.5" Background="White">
        </Label>
    </Grid>
</Page>
